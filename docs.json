{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Dromo Docs",
  "colors": {
    "primary": "#2563EB",
    "light": "#60A5FA",
    "dark": "#1E40AF"
  },
  "favicon": "favicon.ico",
  "logo": {
    "light": "/images/logo.png",
    "dark": "/images/logo.png",
    "href": "https://dromo.io"
  },
  "footerSocials": {
    "website": "https://dromo.io",
    "github": "https://github.com/dromoio",
    "x": "https://x.com/dromoio",
    "linkedin": "https://linkedin.com/company/dromo"
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "api": {
    "baseUrl": "https://app.dromo.io/api/v1",
    "auth": {
      "method": "bearer",
      "name": "X-Dromo-License-Key"
    },
    "playground": {
      "mode": "show",
      "display": "simple"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "welcome",
              "getting-started/javascript",
              "getting-started/react",
              "getting-started/angular",
              "getting-started/headless"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              {
                "group": "Defining a schema",
                "pages": [
                  "guides/using-types",
                  "guides/schema-builder",
                  "guides/saved-schema-api"
                ]
              },
              {
                "group": "Advance Validations",
                "pages": [
                  "guides/validate-multiple-rows",
                  "guides/validate-external-data",
                  "guides/using-addField",
                  "guides/saving-progress"
                ]
              },
              "guides/custom-styling",
              "guides/bring-your-own-storage",
              "guides/zapier-integration",
              "guides/using-manyToOne",
              "guides/using-transform-data",
              "guides/importing-a-pdf"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "reference/dromo-uploader-sdk",
              "reference/react-dromo-uploader",
              {
                "group": "Settings",
                "pages": [
                  "reference/settings/settings",
                  "reference/settings/style-overrides",
                  "reference/settings/deprecated"
                ]
              },
              {
                "group": "Fields",
                "pages": [
                  "reference/fields/fields",
                  "reference/fields/field-types",
                  "reference/fields/field-validators"
                ]
              },
              "reference/hooks",
              "reference/users",
              "reference/results",
              "reference/custom-file-parsers",
              "reference/webhooks"
            ]
          },
          {
            "group": "FAQ & Changelog",
            "pages": ["faqs", "changelog"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Authentication",
            "pages": [
              "api-reference/authentication"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": {
              "source": "api-reference/openapi.json",
              "directory": "api-reference"
            }
          }
        ]
      }
    ]
  },
  "redirects": [
    {
      "source": "/guides/exporting-errors",
      "destination": "/guides/saving-progress",
      "permanent": true
    },
    {
      "source": "/guides/using-beforeFinish",
      "destination": "/guides/validate-multiple-rows",
      "permanent": true
    },
    {
      "source": "/guides/using-row-hooks",
      "destination": "/guides/validate-external-data",
      "permanent": true
    },
    {
      "source": "/settings",
      "destination": "/reference/settings/settings",
      "permanent": true
    },
    {
      "source": "/fields",
      "destination": "/reference/fields/fields",
      "permanent": true
    },
    {
      "source": "/hooks",
      "destination": "/reference/hooks",
      "permanent": true
    },
    {
      "source": "/users",
      "destination": "/reference/users",
      "permanent": true
    },
    {
      "source": "/results",
      "destination": "/reference/results",
      "permanent": true
    },
    {
      "source": "/custom-file-parsers",
      "destination": "/reference/custom-file-parsers",
      "permanent": true
    },
    {
      "source": "/webhooks",
      "destination": "/reference/webhooks",
      "permanent": true
    }
  ]
}
